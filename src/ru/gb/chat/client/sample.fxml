<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.chat.client.Controller">

    <HBox fx:id="regPanel" spacing="5.0">
        <TextField fx:id="nicknameField" promptText="Имя в чате..." HBox.hgrow="ALWAYS" />
        <Button onAction="#sendReg" text="Зарегистрироваться" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendDelReg" style="-fx-background-color: red;" text="Удалить Аккаунт" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>

    <HBox fx:id="authPanel" spacing="5.0">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passField" onAction="#sendAuth" promptText="Пароль" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendAuth" text="Send" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>

    <HBox fx:id="imgPanel" alignment="CENTER">
        <children>
            <ImageView fitHeight="150.0" fitWidth="378.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@img/background.jpg" />
                </image>
            </ImageView>
        </children>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
        <ListView fx:id="clientsList" maxWidth="200" minWidth="200" />
    </HBox>

    <HBox fx:id="msgPanel" spacing="5.0">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="send" onAction="#sendMsg" text="Send" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>

</VBox>
